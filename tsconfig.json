{
    "compilerOptions": {
        "module": "ES2015",
        "esModuleInterop": true,
        "target": "es2015",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowJs": true,
        "strict": false,
        "declaration": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "resolveJsonModule": true
    },
    "lib": ["es2019", "dom"],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.{spec,test}.ts"]
  }
  